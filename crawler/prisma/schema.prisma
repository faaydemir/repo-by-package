datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Repo {
  id                 Int              @id @default(autoincrement())
  githubId           BigInt?          @unique
  owner              String
  name               String
  fullName           String?
  url                String?
  htmlUrl            String?
  description        String?
  language           String?
  topics             String?
  defaultBranch      String?
  stargazersCount    Int?
  watchersCount      Int?
  forksCount         Int?
  openIssuesCount    Int?
  license            Json?
  private            Boolean          @default(false)
  createdAt          DateTime?
  updatedAt          DateTime?
  pushedAt           DateTime?
  insertedAt         DateTime         @default(now())
  repoRependencies   RepoDependency[]
  packageProcessedAt DateTime?
  processible        Boolean          @default(true)
}

model RepoDependency {
  id                 Int                @id @default(autoincrement())
  repo               Repo               @relation(fields: [repoId], references: [id])
  repoId             Int
  path               String?
  commitId           String?
  insertedAt         DateTime           @default(now())
  packageProvider    String?
  dependencyMappings DependencyMapping[]

  @@unique([repoId, path])
}

model Dependency {
  id       Int    @id @default(autoincrement())
  name     String
  provider String

  dependencyMappings DependencyMapping[]

  @@unique([name, provider])
}

model DependencyMapping {
  id               Int           @id @default(autoincrement())
  repoDependency   RepoDependency @relation(fields: [repoDependencyId], references: [id])
  repoDependencyId Int
  dependency       Dependency     @relation(fields: [dependencyId], references: [id])
  dependencyId     Int
  version          String?
  minVersion       String?
  maxVersion       String?
  versionText      String
  dependencyType   String?
  insertedAt       DateTime       @default(now())

  @@unique([repoDependencyId, dependencyId])
}

model RepoCrawTaskRun {
  id                  Int       @id @default(autoincrement())
  taskKey             String    @unique
  maxStars            Int
  lastRunAt           DateTime?
  isBackwardCompleted Boolean   @default(false)
  error               String?
}