generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["private"]
}

model Repo {
  id                      Int              @id @default(autoincrement())
  githubId                BigInt?          @unique
  owner                   String
  name                    String
  fullName                String?
  url                     String?
  htmlUrl                 String?
  description             String?
  language                String?
  topics                  String?
  defaultBranch           String?
  stargazersCount         Int?
  watchersCount           Int?
  forksCount              Int?
  openIssuesCount         Int?
  license                 Json?
  private                 Boolean          @default(false)
  createdAt               DateTime?
  updatedAt               DateTime?
  pushedAt                DateTime?
  languages               String[]         @default([])
  languageDetails         Json?
  insertedAt              DateTime         @default(now())
  packageProcessedAt      DateTime?
  hasParsableDependencies Boolean          @default(false)
  isParseFailed           Boolean?         @default(false)
  repoRependencies        RepoDependency[]

  @@schema("private")
}

model RepoDependency {
  path               String?
  commitId           String?
  insertedAt         DateTime            @default(now())
  packageProvider    String?
  id                 Int                 @id @default(autoincrement())
  repoId             Int
  dependencyMappings DependencyMapping[]
  repo               Repo                @relation(fields: [repoId], references: [id])

  @@unique([repoId, path, packageProvider])
  @@schema("private")
}

model Dependency {
  name               String
  provider           String
  unique             String?
  id                 Int                 @id @default(autoincrement())
  dependencyMappings DependencyMapping[]

  @@unique([name, provider])
  @@unique([unique,provider])
  @@schema("private")
}

model DependencyMapping {
  id               Int            @id @default(autoincrement())
  dependencyId     Int
  repoDependencyId Int
  dependency       Dependency     @relation(fields: [dependencyId], references: [id])
  repoDependency   RepoDependency @relation(fields: [repoDependencyId], references: [id])

  @@unique([repoDependencyId, dependencyId])
  @@schema("private")
}

model RepoCrawlTaskRun {
  id             Int       @id @default(autoincrement())
  taskKey        String    @unique
  lastRunAt      DateTime?
  isCompleted    Boolean   @default(false)
  error          String?
  starCursor     Int
  completedCount Int?      @default(0)

  @@schema("private")
}

model DependencyParseTaskRun {
  id             Int       @id @default(autoincrement())
  taskKey        String    @unique
  lastRunAt      DateTime?
  isCompleted    Boolean   @default(false)
  error          String?
  idCursor       Int?
  completedCount Int?      @default(0)

  @@schema("private")
}
